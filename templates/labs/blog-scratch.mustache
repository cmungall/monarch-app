<!DOCTYPE html>
<html>
  <head>
    <title>Monarch Diseases and Phenotypes</title>
    {{#scripts}}
    <script type="text/javascript" src="{{url}}"></script>
    {{/scripts}}
    {{{includes.analytics}}}
    {{#stylesheets}}
    <link rel="stylesheet" type="text/css" href="{{url}}"/>
    {{/stylesheets}}
    <link rel="stylesheet" type="text/css" href="/css/monarch-main.css"/>
    <link rel="stylesheet" type="text/css" href="/css/main.css"/>
    <link rel="icon" href="/image/favicon.ico" type="image/x-icon">
    <meta charset="utf-8"/>
  </head>
  <body style="padding-top: 40px;">

    <!-- Nav. -->
    {{{includes.blog_nav}}}

    <!-- Banner. -->
    <div class="jumbotron">
      <img id="monarch-logo-horizontal"
	   class="downloadline"
	   src="/image/logo-horizontal.png"/>
      <a id="feedback-main"
	 class="downloadline downloadline-left btn btn-large btn-default btn-monarch-main monarch-feedback-dark"
         href="mailto:info@monarchinitiative.org">Your feedback welcome!</a>
      <div class="tagline">
        Enabling navigation across a rich landscape of
        phenotypes, diseases, models, and genes for
        translational research.
	<a href="/page/about">Find out more</a>.<br/>
        <a href="http://mail.monarchinitiative.org/mailman/listinfo/users">Sign up for our listserve to receive announcements</a>.
      </div>
    </div>

    <!-- Open row section. -->
    <div class="container-fluid" style="margin: 1em;">
      <!-- <div class="row"> -->
      <div class="row" style="margin-left: -15px; margin-right: -14px;">
	
	<!-- Two-column layout, col. 1 -->
	<div id="col-1" class="col-xs-12 col-sm-8 col-md-8 col-lg-8">

	  <!-- Graphic roll. -->
	  <div id="graphic">
	    <img src="/image/homepage.png"/>
	    <a href="/disease"><div id="diseasebutton" class="graphicbutton"></div></a>
	    <a href="/phenotype"><div id="phenotypebutton" class="graphicbutton"></div></a>
	    <a href="/gene"><div id="genebutton" class="graphicbutton"></div></a>
	    <a href="/model"><div id="modelbutton" class="graphicbutton"></div></a>
          </div>	

	  <!-- About. -->
	  <div>
	    <div class="card">
	      <div class="card-header">
		<h3 class="card-title">About</h3>
	      </div>
	      <div class="card-body">
		Nya!
	      </div>
	    </div>
	  </div>

	  <!-- News and twitter combo. -->
	  <div class="row">
	    <div id="blog" class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
	      
	      <div class="card">
		<div class="card-header">
		  <h3 class="card-title">News and Events</h3>
		</div>
		<div class="card-body">
		  {{#blog_results}}
		  <dl>
		    <dt>
		      <a href="{{link}}">{{title}}</a>
		      {{#category}}
		      <a href="{{link}}" class="label label-default">{{label}}</a>
		      {{/category}}
		    </dt>
		    <dd>
		      <strong>{{date}}</strong>
		      {{{description}}}
		    </dd>
		  </dl>
		  {{/blog_results}}
		</div>
	      </div>
	      
	    </div>
	    
	    <div id="twitter" class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
	    </div>	    
	    
	  </div>
	</div>

	<!-- Two-column layout, col. 2 -->
	<div id="col-2" class="col-xs-12 col-sm-4 col-md-4 col-lg-4">

	  <!-- Search. -->
	  <div>
	    <div class="card">
	      <div class="card-header">
		<h3 class="card-title">Search</h3>
	      </div>
	      <div class="card-body">
		Nya!
	      </div>
	    </div>
	  </div>

	  <!-- Explore. -->
	  <div>
	    <div class="card">
	      <div class="card-header">
		<h3 class="card-title">Explore</h3>
	      </div>
	      <div class="card-body">
		Nya! 1234
	      </div>
	    </div>
	  </div>

	  <!-- Pheno Search. -->
	  <div>
	    <div class="card">
	      <div class="card-header">
		<h3 class="card-title">Pheno search</h3>
	      </div>
	      <div class="card-body">
		Nya!
	      </div>
	    </div>
	  </div>
	  
	</div>
	
      </div>
    </div>
    <!-- Close row section. -->

    {{{includes.blog_foot}}}

  </body>
</html>
